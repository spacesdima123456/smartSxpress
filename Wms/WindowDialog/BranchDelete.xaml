<Window 
        Width="300"
        Height="100"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="DarkGray"
        WindowStartupLocation="CenterOwner"
        x:Class="Wms.WindowDialog.BranchDelete"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <StackPanel VerticalAlignment="Center">
        <Label Content="Вы действительно хотите удалить филиал ?" HorizontalAlignment="Center"></Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Click="Close" Content="Да" Command="{Binding Path=DeleteCommand}"/>
            <Button Click="Close" Content="Нет" Margin="10 0 0 0"/>
        </StackPanel>
    </StackPanel>
</Window>
