<Page x:Class="Wms.View.Page.Package"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Wms.Converter"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
      xmlns:vm="clr-namespace:Wms.ViewModel.Page"
      mc:Ignorable="d" 
      d:DesignHeight="750"
      d:DesignWidth="800"
      Title="Package">
    <Page.DataContext>
        <vm:PackageViewModel/>
    </Page.DataContext>
    <Page.Resources>
        <converter:UrlToDoubleConverter x:Key="DoubleConverter"/>
        <Style TargetType="{x:Type dxlc:LayoutItem}">
            <Setter  Property="FontSize" Value="15"/>
            <Setter  Property="FontWeight" Value="DemiBold"/>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter  Property="FontSize" Value="17"/>
            <Setter  Property="FontWeight" Value="Bold"/>
            <Setter  Property="Margin" Value="35 0 35 20"/>
            <Setter  Property="BorderBrush" Value="Black"/>
        </Style>
        <Style TargetType="{x:Type dxlc:LayoutControl}">
            <Setter Property="ItemSpace" Value="15"/>
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>
        <Style TargetType="{x:Type dxlc:LayoutGroup}">
            <Setter Property="ItemSpace" Value="15"/>
        </Style>
    </Page.Resources>
    <Grid Margin="10 40 40 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Sender" Grid.Column="1" Grid.Row="0" BorderThickness="2" Background="#AFAFAF">
            <StackPanel>
                <GroupBox Header="Doc" Margin="35 10 35 20">
                    <dxlc:LayoutControl >
                        <dxlc:LayoutItem Label="Type: ">
                            <dxe:ComboBoxEdit SelectedItem="{Binding Path=DocTypeSender, Mode=OneWay}" ItemsSource="{Binding Path=DocTypes, Mode=OneWay}" DisplayMember="Type"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="#:">
                            <dxe:TextEdit/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutControl>
                </GroupBox>
                <GroupBox Header="Address" Margin="35 0 35 28">
                    <dxlc:LayoutControl>
                        <dxlc:LayoutItem Label="Name: ">
                            <dxe:TextEdit/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Address:">
                            <dxe:TextEdit/>
                        </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="City:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                        <dxlc:LayoutGroup>
                            <dxlc:LayoutItem Label="Zip:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="State:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                        <dxlc:LayoutGroup Orientation="Horizontal">
                            <dxlc:LayoutItem Label="Country:">
                                <dxe:ComboBoxEdit SelectedItem="{Binding Path=CountrySender, Mode=OneWay}" ItemsSource="{Binding Path=CountriesSender, Mode=OneWay}" DisplayMember="Name" IsEnabled="False"/>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="Phone:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutControl>
                </GroupBox>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" Margin="0 15 0 0">
            <DataGrid x:Name="DtgBox" Height="230" ItemsSource="{Binding Path=Boxes, Mode=TwoWay}" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Коробка" Width="75" Binding="{Binding Path=Number}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Высота" Width="75" Binding="{Binding Path=Height, Mode=TwoWay, Converter={StaticResource DoubleConverter}, ConverterParameter='1'}"/>
                    <DataGridTextColumn Header="Длинна" Width="75" Binding="{Binding Path=Length, Converter={StaticResource DoubleConverter}, ConverterParameter='1'}"/>
                    <DataGridTextColumn Header="Ширина"  Width="75" Binding="{Binding Path=Width, Converter={StaticResource DoubleConverter }, ConverterParameter='1'}"/>
                    <DataGridTextColumn Header="Вес" Width="90" Binding="{Binding Path=Weight, Converter={StaticResource DoubleConverter }, ConverterParameter='2'}"/>
                    <!--<DataGridTemplateColumn Header="Delete" Width="75">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="+" FontSize="45"  Background="#AFAFAF" Padding="0 -16 0 0" Width="40" Height="40" Command="{Binding Path=AddBoxCommand}" Margin="0 20 0 0"/>
        </StackPanel>
        <GroupBox Header="Recipient" Grid.Column="3" Grid.Row="0" BorderThickness="2" Background="#AFAFAF">
            <StackPanel>
                <GroupBox Header="Doc" Margin="35 10 35 20">
                    <dxlc:LayoutControl >
                        <dxlc:LayoutItem Label="Type: ">
                            <dxe:ComboBoxEdit ItemsSource="{Binding Path=DocTypes, Mode=OneWay}" DisplayMember="Type" SelectedItem="{Binding Path=DocTypeRecipient, Mode=OneWay}"  IsEnabled="False"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="#:">
                            <dxe:TextEdit/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutControl>
                </GroupBox>
                <GroupBox Header="Address" Margin="35 0 35 28">
                    <dxlc:LayoutControl>
                        <dxlc:LayoutItem Label="Name: ">
                            <dxe:TextEdit/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Address:">
                            <dxe:TextEdit/>
                        </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="City:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                        <dxlc:LayoutGroup>
                            <dxlc:LayoutItem Label="Zip:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="State:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                        <dxlc:LayoutGroup Orientation="Horizontal">
                            <dxlc:LayoutItem Label="Country:">
                                <dxe:ComboBoxEdit ItemsSource="{Binding Path=CountriesRecipient, Mode=OneWay}" SelectedItem="{Binding Path=CountryRecipient, Mode=TwoWay}" DisplayMember="Name" >
                                </dxe:ComboBoxEdit>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="Phone:">
                                <dxe:TextEdit/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutControl>
                </GroupBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
