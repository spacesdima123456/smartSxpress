<base:DisplayAlertBase 
    Width="300"
    Height="100"
    mc:Ignorable="d"
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="DarkGray"
    Title="{Binding Path=Tittle, Mode=OneWay}"
    x:Class="Wms.View.WindowDialog.DisplayAlert"
    xmlns:base="clr-namespace:Wms.View.WindowDialog"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <base:DisplayAlertBase.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </base:DisplayAlertBase.Resources>
    <StackPanel VerticalAlignment="Center">
        <Label Content="{Binding Path=Message, Mode=OneWay}" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Click="ClickOk" Content="{Binding Path=OkText, Mode=OneWay}" Command="{Binding Path=OkCommand, Mode=OneWay}"/>
            <Button Click="ClickCancel" Content="{Binding Path=CancelText, Mode=OneWay}" Command="{Binding Path=CancelText, Mode=OneWay}" Margin="10 0 0 0"/>
        </StackPanel>
    </StackPanel>
</base:DisplayAlertBase>

