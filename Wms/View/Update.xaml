<Window x:Class="Wms.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:Wms.Localization"
        mc:Ignorable="d"
        Title="{lang:Lang Update}"
        Height="100"
        Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Grid>
        <Label x:Name="Label" Content="{lang:Lang UpdateProgress}" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"/>
        <ProgressBar Value="{Binding Path=ProgressPercentage, Mode=OneWay}"  HorizontalAlignment="Stretch" Height="30" VerticalAlignment="Center" Margin="15 15 15 0"/>
    </Grid>
</Window>
